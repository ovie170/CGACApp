{
  "id": "com.cgac.church.app",
  "name": "Christ Gospel Apostolic Church",
  "short_name": "CGAC",
  "description": "Bible, Hymns, Notes and Favorites - God is our guide",
  "start_url": "/",
  "scope": "/",
  "scope_extensions": [
    { "origin": "*" }
  ],
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "orientation": "portrait",
  "background_color": "#ffffff",
  "theme_color": "#001f54",
  "lang": "en",
  "dir": "ltr",

  "categories": ["books", "education", "lifestyle", "religion"],

  "prefer_related_applications": false,

  "launch_handler": {
    "client_mode": "focus-existing"
  },

  "protocol_handlers": [
    {
      "protocol": "web+cgac",
      "url": "/?url=%s"
    }
  ],

  "shortcuts": [
    {
      "name": "Open Bible",
      "short_name": "Bible",
      "url": "/bible.html",
      "icons": [{ "src": "icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Open Hymns",
      "short_name": "Hymns",
      "url": "/hymns.html",
      "icons": [{ "src": "icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Open Notes",
      "short_name": "Notes",
      "url": "/notes.html",
      "icons": [{ "src": "icon-192.png", "sizes": "192x192" }]
    }
  ],

  "share_target": {
    "action": "/share.html",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },

  "iarc_rating_id": "e73d8e14-0000-0000-0000-000000000000",

  "icons": [
    { "src": "icon-48.png", "sizes": "48x48", "type": "image/png" },
    { "src": "icon-72.png", "sizes": "72x72", "type": "image/png" },
    { "src": "icon-96.png", "sizes": "96x96", "type": "image/png" },
    { "src": "icon-128.png", "sizes": "128x128", "type": "image/png" },
    { "src": "icon-144.png", "sizes": "144x144", "type": "image/png" },
    { "src": "icon-152.png", "sizes": "152x152", "type": "image/png" },
    { "src": "icon-192.png", "sizes": "192x192", "type": "image/png", "purpose": "any maskable" },
    { "src": "icon-256.png", "sizes": "256x256", "type": "image/png" },
    { "src": "icon-384.png", "sizes": "384x384", "type": "image/png" },
    { "src": "icon-512.png", "sizes": "512x512", "type": "image/png", "purpose": "any maskable" }
  ]
}
